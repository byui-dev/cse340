<div class="main-wrapper">
  <h1>Welcome to CSE Motors!</h1>

  <!-- Hero Section -->
  <div class="hero-section">
    <div class="text-overlay">
      <p>DMC Delorean</p>
      <ul class="features-list">
        <% features.forEach(feature=> { %>
          <li>
            <%= feature %>
          </li>
          <% }); %>
      </ul>

      <a href="#" class="own-today-btn">
        <img src="/images/site/own_today.png" alt="Own the Delorean Today" class="own-today" />
      </a>
    </div>

    <img class="main-image" src="/images/vehicles/delorean.jpg" alt="DMC Delorean" />
  </div>

  <!-- Responsive Section -->
  <section class="responsive-section">
    <div class="heading-container">
      <!-- Upgrades Grid -->
      <div class="heading-left">
        <h2>Delorean Upgrades</h2>
        <div class="image-grid responsive-grid">
          <% upgrades.forEach(upgrade=> { %>
            <div class="image-item">
              <img src="/images/upgrades/<%= upgrade.src %>" alt="<%= upgrade.alt %>" />
              <p class="caption">
                <%= upgrade.caption %>
              </p>
            </div>
            <% }); %>
        </div>
      </div>

      <!-- Reviews List -->
      <div class="heading-right">
        <h2>DMC Delorean Reviews</h2>
        <ul class="special-features">
          <% reviews.forEach(review=> {
            const rating = review.match(/\((\d(?:\.\d)?)\/5\)/)?.[1];
            %>
            <li>
              <%= review %>
                <% if (rating) { %>
                  <span class="stars">⭐️ <%= rating %>/5</span>
                  <% } %>
            </li>
            <% }); %>
        </ul>
      </div>
    </div>
  </section>
</div>