<section class="form-section">
  <h1>
    <%= title %>
  </h1>

  <% if (messages.notice) { %>
    <p class="notice">
      <%= messages.notice %>
    </p>
    <% } %>

      <% if (messages.error) { %>
        <p class="error">
          <%= messages.error %>
        </p>
        <% } %>

          <% if (errors) { %>
            <ul class="error-list">
              <% errors.array().forEach(error=> { %>
                <li class="error">
                  <%= error.msg %>
                </li>
                <% }) %>
            </ul>
            <% } %>

              <form action="/account/login" method="POST" class="auth-form">
                <div class="form-group">
                  <label for="account_email">Email Address:</label>
                  <input type="email" id="account_email" name="account_email" required
                    value="<%= locals.account_email || '' %>" placeholder="Enter your email">
                </div>

                <div class="form-group">
                  <label for="account_password">Password:</label>
                  <input type="password" id="account_password" name="account_password" required
                    placeholder="Enter your password">
                </div>

                <button type="submit" class="auth-button">Log In</button>
                <p class="auth-link">No account? <a href="/account/register">Sign-up</a></p>
              </form>
</section>