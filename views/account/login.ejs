<section class="form-section">
  <h1><%= title  %></h1>
    <form action="/account/login" method="POST" class="auth-form">
        <div class="form-group">
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="account_email" required>
        </div>
        <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required>
        </div>
        <button type="submit" class="auth-button">Log In</button>
        <p class="auth-link">No account? <a href="/account/register">Sign-up</a></p>
    </form>
</section>
  